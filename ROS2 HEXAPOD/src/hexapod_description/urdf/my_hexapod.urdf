<?xml version="1.0"?>

<robot name="my_hexapod">


  <!-- Eslabon Cuerpo-->
  <link name= "base_link" />
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="arrusr@ros2vm:~/ROS2Dev/hexapod_ws/src/hexapod_description/urdf/meshes/CuerpoHexapod.stl" scale="1">
      </geometry>
    </visual>
  </link>

  <!-- Junta entre Cuerpo y Motor Coxa -->
  <joint name="body_to_motcoxa_joint_p1" type="fixed">
    <parent link="base_link" />
    <child link="motor_coxa_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>

  <!--  Motor Coxa-->
  <link name= "servo_coxa_p1" />
    <visual>
      <geometry>
        <sphere radius="0.5" />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>

  <!-- Junta entre Motor Coxa y Eslabon Coxa -->
  <joint name="motcoxa_to_eslcoxa_joint_p1" type="revolute">
    <parent link="motor_coxa_p1" />
    <child link="eslabon_coxa_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>
  <!--  Eslabon Coxa-->
  <link name= "eslabon_coxa_p1" />
    <visual>
      <geometry>
        <cylinder radius="0.5" length="0.5" />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>

  <!-- Junta entre Eslabon Coxa y Motor Femur-->
  <joint name="eslcoxa_to_motfemur_joint_p1" type="fixed">
    <parent link="eslabon_coxa_p1" />
    <child link="motor_femur_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>

  <!--   Motor Femur-->
  <link name= "motor_femur_p1" />
    <visual>
      <geometry>
        <sphere radius=0.5 />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>
  <!-- Junta entre  Motor Femur y Eslabon Femur-->
  <joint name="motfemur_to_eslfemur_joint_p1" type="revolute">
    <parent link="motor_femur_p1" />
    <child link="eslabon_femur_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>
  <!--  Eslabon Femur-->
  <link name= "eslabon_femur_p1" />
    <visual>
      <geometry>
        <cylinder radius="0.5" length="0.5" />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>


  <!-- Junta entr Eslabon Femur y Motor Tibia Pata1-->
  <joint name="eslfemur_to_mottibia_joint_p1" type="fixed">
    <parent link="eslabon_femur_p1" />
    <child link="motor_tibia_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>


  <!-- Pata 1 Motor Tibia-->
  <link name= "motor_tibia_p1" />
    <visual>
      <geometry>
        <sphere radius=0.5 />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>

  <!-- Junta entre Motor Tibia y Eslabon Tibia Pata1-->
  <joint name="mottibia_to_esltibia_joint_p1" type="revolute">
    <parent link="motor_tibia_p1" />
    <child link="eslbon_tibia_p1" />
    <origin xyz= "0 0 0" rpy="0 0 0">
  </joint>

  <!--  Eslabon Femur-->
  <link name= "eslabon_tibia_p1" />
    <visual>
      <geometry>
        <cylinder radius="0.5" length="0.5" />
          <origin xyz= "0 0 0" rpy="0 0 0" />
      </geometry>
    </visual>
  </link>




</robot>
